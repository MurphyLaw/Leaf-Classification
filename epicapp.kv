#:kivy 1.1.0

ConnectPage:
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                id: model
                text: root.model
                on_release: root.model_button()
            Button:
                id: labelbin
                text: root.labelbin
                on_release: root.labelBin_button()
            Button:
                id: resetbutton
                text: 'Reset'
                on_release: root.reset_button()
        FloatLayout:
            MjpegViewer:
                size_hint: None, None
                size: 1000, 500
                pos: 0, 125
                src: self.start()

            RelativeLayout:
                size_hint: None, None
                size: 325, 600
                pos: 1000, 30.5
                BoxLayout:
                    orientation:'vertical'
                    size_hint: 1, None
                    height:600
                    pos_hint:{'top': 1}
                    Label:
                        size_hint_y: None
                        height: 30
                        text_size: (325, 30)
                        id: labelclassificationname
                        font_size:30
                        text:""
                        outline_color:[0,0,0]
                    Label:
                        valign:'top'
                        padding_y:10
                        height: 570
                        text_size: (325, 570)
                        id: labelclassificationdesc
                        font_size:15
                        text:""
                        outline_color:[0,0,0]   
                
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'bottom'
            BoxLayout:
                size_hint_y: None
                height: 30
                Button:
                    text: 'Classify Image'
                    on_release: root.classify_button()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)