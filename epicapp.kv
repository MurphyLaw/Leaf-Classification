#:kivy 1.1.0
ConnectPage:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.jpg'
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint_y: None
            height: 80
            Button:
                id: resetbutton
                text: 'Classify Leaf'
                font_size:30
                on_release: root.classify_button()
            Button:
                id: showusebutton
                text: 'Preparation A and B'
                font_size:30
                on_release: root.show_use()
            Button:
                id: showwaysbutton
                text: 'Preparation C and D'
                font_size:30
                on_release: root.show_ways()
            Button:
                id: showwaysabutton
                text: 'Preparation E and F'
                font_size:30
                on_release: root.show_waysa()

        BoxLayout:
            BoxLayout:
                orientation:'vertical'
                Label:
                    size_hint_y: None
                    height: 300
                    id: labelclassificationname
                    font_size:22
                    text:""
                    outline_color:[0,0,0]
                Label:
                    valign: 'top'
                    padding_x: [-10,0]
                    text_size: (300, 300)
                    id: labelclassificationdesc
                    text:""
                    outline_color:[0,0,0]
                    color:[1,1,1,0]
            BoxLayout:
                orientation:'vertical'
                Label:
                    size_hint_y: None
                    height: 10
                    id: labelclassificationlabel1
                    font_size:25
                    text:""
                    outline_color:[0,0,0]
                Label:
                    valign: 'top'
                    text_size: (300, 350)
                    id: labelclassificationways
                    font_size:20
                    text:""
                    outline_color:[0,0,0]
                    color:[1,1,1,0]
            BoxLayout:
                orientation:'vertical'
                Label:
                    size_hint_y: None
                    height: 330
                    id: labelclassificationlabel2
                    font_size:25
                    text:""
                    outline_color:[0,0,0]
                Label:
                    valign: 'top'
                    text_size: (300, 670)
                    font_size:20
                    id: labelclassificationmedicine
                    text:""
                    outline_color:[0,0,0]
                    color:[1,1,1,0]
            BoxLayout:
                orientation:'vertical'
                Label:
                    size_hint_y: None
                    height: 330
                    id: labelclassificationlabel3
                    font_size:25
                    text:""
                    outline_color:[0,0,0]
                Label:
                    valign: 'top'
                    text_size: (300, 670)
                    font_size:20
                    id: labelclassificationmedicinea
                    text:""
                    outline_color:[0,0,0]
                    color:[1,1,1,0]

        FloatLayout:
            MjpegViewer:
                size_hint: None, None
                size: 670, 350
                pos: 350, 0
                src: self.start()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
