#:kivy 1.1.0

ConnectPage:
    BoxLayout:
        orientation:'vertical'
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'top'
            BoxLayout:
                size_hint_y: None
                height: 30
                Button:
                    id: model
                    text: root.model
                    on_release: root.model_button()
                Button:
                    id: labelbin
                    text: root.labelbin
                    on_release: root.labelBin_button()
                Button:
                    text: 'Find an Image'
                    on_release: root.findImage_button()
        Label:
            id: labelclassification
            text_size:(250, None)
            font_size:30
            text:''
            outline_color:[0,0,0]
        AnchorLayout:
            anchor_x:'left'
            anchor_y:'top'
            Image:
                id: image
                source:root.source
                allow_stretch: True
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'bottom'
            BoxLayout:
                size_hint_y: None
                height: 30
                Button:
                    text: 'Classify Image'
                    on_release: root.classify_button()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)